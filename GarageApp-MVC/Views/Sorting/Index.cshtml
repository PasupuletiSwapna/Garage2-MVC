@model IEnumerable<GarageApp_MVC.Models.ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Sorting</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("VehicleType", "Index", new { sortOrder = "VehicleType" })


        </th>
        <th>
            @Html.ActionLink("RegNum", "Index", new { sortOrder = "RegNum" })
        </th>
        <th>
            @Html.ActionLink("Color", "Index", new { sortOrder = "Color" })
        </th>
        <th>
            @Html.ActionLink("Brand", "Index", new { sortOrder = "Brand" })
        </th>

        <th>
            @Html.ActionLink("Model", "Index", new { sortOrder = "Model" })
        </th>
        <th>
            @Html.ActionLink("NoOfWheels", "Index", new { sortOrder = "NoOfWheels" })
        </th>
        <th>
            @Html.ActionLink("SeatCapacity", "Index", new { sortOrder = "SeatCapacity" })
        </th>


        <th></th>
    </tr>

    @foreach (var vehical in Model)
    {
        <tr>
            <td>
                @vehical.VehicleType
            </td>
            <td>
                @vehical.RegNum
            </td>
            <td>
                @vehical.Color
            </td>
            <td>
                @vehical.Brand
            </td>
            <td>
                @vehical.Model
            </td>
            <td>
                @vehical.NoOfWheels
            </td>
            <td>
                @vehical.SeatCapacity
            </td>
        </tr>

    }
</table>

