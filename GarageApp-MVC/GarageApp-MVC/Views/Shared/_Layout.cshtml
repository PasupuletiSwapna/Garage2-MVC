<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Garage App-2.0</title>
   
    @*<link href="~/Content/Site.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @*<img src="~/Images/empty.jpg" / alignment="center" width="1000px" height="300px">*@
    <div class="main-header" style="font-family:Verdana;font-size:72px;">WELCOME TO PARKINN GARAGE2</div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Garage 2.5", "Index", "Home", new { area = "" }, new { @class = "navbar-VehicleTypeId" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("VehiclesDetails", "", "ParkedVehicles")</li>
                    <li>@Html.ActionLink("ParkedVehicles", "OverviewIndex", "ParkedVehicles")</li>
                    <li>@Html.ActionLink("MemberRegistry", "Index", "Members")</li>
                    @*<li>@Html.ActionLink("Register New Member", "Create", "Members")</li>*@
                    @*<li>@Html.ActionLink("SearchForaVehicle","","Search")</li>*@
                    @*<li>@Html.ActionLink("Sorting","","Sorting")</li>*@


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content img-responsive">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Garage Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
